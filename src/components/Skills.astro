            <div class="top-skill-fill" style="width: 95%;"></div>
          </div>
        </div>
        <div class="top-skill">
          <div class="top-skill-content">
            <span class="top-skill-name">Java Ecosystem</span>
            <span class="top-skill-level">Expert</span>
          </div>
          <div class="top-skill-bar">
            <div class="top-skill-fill" style="width: 90%;"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-section {
    background: linear-gradient(180deg, transparent 0%, var(--color-bg-secondary) 50%, transparent 100%);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-3xl);
  }

  .skill-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .skill-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary), var(--color-accent));
    transform: scaleX(0);
    transform-origin: left;
    transition: var(--transition);
  }

  .skill-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
  }

  .skill-card:hover::before {
    transform: scaleX(1);
  }

  .skill-card-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
  }

  .skill-icon {
    font-size: 1.5rem;
  }

  .skill-category {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .skill-tag {
    background: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    transition: var(--transition);
  }

  .skill-tag:hover {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  /* Top Skills */
  .top-skills {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-xl);
    max-width: 800px;
    margin: 0 auto;
  }

  .top-skills-title {
    text-align: center;
    margin-bottom: var(--spacing-lg);
    color: var(--color-text);
  }

  .top-skills-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .top-skill {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .top-skill-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .top-skill-name {
    font-weight: 500;
    color: var(--color-text);
  }

  .top-skill-level {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .top-skill-bar {
    height: 8px;
    background: var(--color-bg-tertiary);
    border-radius: 4px;
    overflow: hidden;
  }

  .top-skill-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
    border-radius: 4px;
    transition: width 1s ease-out;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .top-skills {
      padding: var(--spacing-md);
    }
  }
</style>
