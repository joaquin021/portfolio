---
const skillCategories = [
  {
    category: "BACKEND",
    skills: ["Java 11 & 21", "Vert.x", "Python", "Spring Boot", "Hibernate", "Groovy"]
  },
  {
    category: "EVENT-DRIVEN",
    skills: ["Kafka", "Event-Driven Architecture", "Reactive Programming", "Uber Cadence"]
  },
  {
    category: "BIG DATA",
    skills: ["Apache Spark", "BigQuery", "ETL Pipelines", "Data Processing"]
  },
  {
    category: "CLOUD",
    skills: ["Google Cloud (BigQuery, GCS)", "AWS (S3, SQS, SNS)", "Docker", "Kubernetes", "OpenShift"]
  },
  {
    category: "DATABASES",
    skills: ["Oracle", "MySQL", "PostgreSQL", "MongoDB", "ElasticSearch", "Neo4j"]
  },
  {
    category: "API & INTEGRATION",
    skills: ["OpenAPI", "gRPC", "REST", "SOAP", "Microservices"]
  },
  {
    category: "CI/CD",
    skills: ["Bazel", "Jenkins Pipelines", "Maven", "Gradle", "Git", "SonarQube"]
  },
  {
    category: "AI DEVELOPMENT",
    skills: ["GitHub Copilot", "Claude Code", "AI-Assisted Coding"]
  },
  {
    category: "METHODOLOGIES",
    skills: ["Scrum", "Kanban", "TDD", "BDD", "Agile"]
  }
];

const coreCompetencies = [
  "SOLUTION ARCHITECTURE",
  "CI/CD & DEVOPS",
  "JAVA ECOSYSTEM"
];
---

<section id="skills" class="section skills-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">TECHNICAL SKILLS</h2>
      <div class="title-line"></div>
    </div>

    <div class="skills-grid">
      {skillCategories.map((category) => (
        <div class="skill-card">
          <h3 class="skill-category">{category.category}</h3>
          <div class="skill-list">
            {category.skills.map((skill) => (
              <div class="skill-item">{skill}</div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="core-section">
      <h3 class="core-title">CORE COMPETENCIES</h3>
      <div class="core-grid">
        {coreCompetencies.map((comp) => (
          <div class="core-item">
            <div class="core-marker"></div>
            <span>{comp}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .skills-section {
    background: var(--color-bg);
    border-top: var(--border-width-thick) solid var(--color-border);
    border-bottom: var(--border-width-thick) solid var(--color-border);
  }

  .section-header {
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    font-family: var(--font-sans);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-md);
  }

  .title-line {
    width: 150px;
    height: var(--border-width);
    background: var(--color-accent);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-3xl);
  }

  .skill-card {
    border: var(--border-width) solid var(--color-border);
    padding: var(--spacing-lg);
    background: var(--color-bg);
    transition: var(--transition);
  }

  .skill-card:hover {
    transform: translate(4px, 4px);
    box-shadow: -4px -4px 0 var(--color-border);
  }

  .skill-category {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: var(--border-width) solid var(--color-accent);
  }

  .skill-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .skill-item {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    padding: 0.5rem;
    background: var(--color-bg-secondary);
    border-left: 3px solid var(--color-border);
    font-weight: 500;
    transition: var(--transition);
  }

  .skill-item:hover {
    border-left-color: var(--color-accent);
    background: var(--color-bg);
    padding-left: 0.75rem;
  }

  /* Core Competencies */
  .core-section {
    border: var(--border-width-thick) solid var(--color-border);
    padding: var(--spacing-2xl);
    background: var(--color-bg-tertiary);
    color: var(--color-bg);
  }

  .core-title {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    margin-bottom: var(--spacing-lg);
    color: var(--color-accent);
  }

  .core-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
  }

  .core-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .core-marker {
    width: 20px;
    height: 20px;
    background: var(--color-accent);
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .core-section {
      padding: var(--spacing-lg);
    }

    .core-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
