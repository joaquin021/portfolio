---
const contactInfo = [
  {
    label: "EMAIL",
    value: "example@example.com",
    href: "mailto:example@example.com"
  },
  {
    label: "PHONE",
    value: "666666666",
    href: "tel:666666666"
  },
  {
    label: "LOCATION",
    value: "ALCALÁ DE HENARES, MADRID",
    href: null
  }
];

const quickFacts = [
  { number: "10+", label: "YEARS" },
  { number: "5", label: "CERTS" },
  { number: "4", label: "COMPANIES" }
];
---

<section id="contact" class="section contact-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">CONTACT</h2>
      <div class="title-line"></div>
    </div>

    <div class="contact-grid">
      <div class="contact-main">
        <div class="contact-cards">
          {contactInfo.map((info) => (
            info.href ? (
              <a href={info.href} class="contact-card">
                <div class="contact-label">{info.label}</div>
                <div class="contact-value">{info.value}</div>
              </a>
            ) : (
              <div class="contact-card">
                <div class="contact-label">{info.label}</div>
                <div class="contact-value">{info.value}</div>
              </div>
            )
          ))}
        </div>

        <div class="education-section">
          <h3 class="education-title">EDUCATION</h3>
          <div class="education-divider"></div>
          <div class="education-content">
            <div class="education-degree">TELECOMMUNICATIONS ENGINEERING</div>
            <div class="education-school">Universidad Politécnica de Cartagena</div>
            <div class="education-year">2009 - 2014</div>
          </div>
        </div>
      </div>

      <div class="facts-section">
        <h3 class="facts-title">BY THE NUMBERS</h3>
        <div class="facts-grid">
          {quickFacts.map((fact) => (
            <div class="fact-card">
              <div class="fact-number">{fact.number}</div>
              <div class="fact-label">{fact.label}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-main">
        <div class="footer-name">JOAQUÍN ROCA SOLER</div>
        <div class="footer-title">SENIOR SOFTWARE ENGINEER</div>
      </div>
      <div class="footer-meta">
        <span>© 2025</span>
        <span>•</span>
        <span>BUILT WITH ASTRO</span>
      </div>
    </div>
  </div>
</footer>

<style>
  .contact-section {
    background: var(--color-bg);
    border-top: var(--border-width-thick) solid var(--color-border);
  }

  .section-header {
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    font-family: var(--font-sans);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-md);
  }

  .title-line {
    width: 150px;
    height: var(--border-width);
    background: var(--color-accent);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--spacing-3xl);
  }

  /* Contact Cards */
  .contact-main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .contact-cards {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .contact-card {
    border: var(--border-width) solid var(--color-border);
    padding: var(--spacing-lg);
    background: var(--color-bg);
    transition: var(--transition);
    text-decoration: none;
    display: block;
  }

  .contact-card:hover {
    transform: translate(4px, 4px);
    box-shadow: -4px -4px 0 var(--color-border);
  }

  .contact-label {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    margin-bottom: var(--spacing-xs);
    color: var(--color-text-secondary);
  }

  .contact-value {
    font-family: var(--font-mono);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
  }

  /* Education */
  .education-section {
    border: var(--border-width-thick) solid var(--color-border);
    padding: var(--spacing-xl);
    background: var(--color-bg-tertiary);
    color: var(--color-bg);
  }

  .education-title {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    margin-bottom: var(--spacing-md);
    color: var(--color-accent);
  }

  .education-divider {
    width: 100%;
    height: 2px;
    background: var(--color-bg);
    margin-bottom: var(--spacing-md);
  }

  .education-degree {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-sm);
  }

  .education-school {
    font-family: var(--font-mono);
    font-size: 0.9375rem;
    font-weight: 500;
    margin-bottom: var(--spacing-xs);
    opacity: 0.9;
  }

  .education-year {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 600;
    opacity: 0.7;
  }

  /* Facts Section */
  .facts-section {
    border: var(--border-width) solid var(--color-border);
    padding: var(--spacing-2xl);
    background: var(--color-bg);
  }

  .facts-title {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-md);
    border-bottom: var(--border-width) solid var(--color-accent);
  }

  .facts-grid {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .fact-card {
    padding: var(--spacing-lg);
    border: var(--border-width) solid var(--color-border);
    background: var(--color-bg-secondary);
    transition: var(--transition);
  }

  .fact-card:hover {
    background: var(--color-bg);
    border-color: var(--color-accent);
  }

  .fact-number {
    font-family: var(--font-sans);
    font-size: 3rem;
    font-weight: 900;
    line-height: 1;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .fact-label {
    font-family: var(--font-sans);
    font-size: 1rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
  }

  /* Footer */
  .footer {
    background: var(--color-bg-tertiary);
    border-top: var(--border-width-thick) solid var(--color-border);
    padding: var(--spacing-2xl) 0;
    margin-top: var(--spacing-3xl);
    color: var(--color-bg);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .footer-name {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: 0.05em;
    color: var(--color-accent);
  }

  .footer-title {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--color-bg);
    opacity: 0.8;
  }

  .footer-meta {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 600;
    display: flex;
    gap: var(--spacing-sm);
    letter-spacing: 0.05em;
    color: var(--color-bg);
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .facts-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-md);
    }

    .fact-number {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .education-section {
      padding: var(--spacing-lg);
    }

    .facts-section {
      padding: var(--spacing-lg);
    }

    .facts-grid {
      grid-template-columns: 1fr;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-meta {
      justify-content: center;
    }
  }
</style>
