---
const certifications = [
  {
    name: "CERTIFIED KUBERNETES ADMINISTRATOR",
    shortName: "CKA",
    issuer: "Linux Foundation",
    validationNumber: "LF-gdax2f9va0"
  },
  {
    name: "MONGODB CERTIFIED DEVELOPER",
    shortName: "MCD",
    issuer: "MongoDB University",
    validationNumber: "476214740"
  },
  {
    name: "PROFESSIONAL SCRUM DEVELOPER",
    shortName: "PSD",
    issuer: "Scrum.org",
    validationNumber: "639688"
  },
  {
    name: "PROFESSIONAL SCRUM MASTER",
    shortName: "PSM",
    issuer: "Scrum.org",
    validationNumber: "592581"
  },
  {
    name: "PROFESSIONAL SCRUM PRODUCT OWNER",
    shortName: "PSPO",
    issuer: "Scrum.org",
    validationNumber: "604613"
  }
];
---

<section id="certifications" class="section certifications-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">CERTIFICATIONS</h2>
      <div class="title-line"></div>
      <p class="section-subtitle">CLOUD • DATABASE • AGILE METHODOLOGIES</p>
    </div>

    <div class="certifications-grid">
      {certifications.map((cert) => (
        <div class="cert-card">
          <div class="cert-badge">{cert.shortName}</div>
          <h3 class="cert-name">{cert.name}</h3>
          <p class="cert-issuer">{cert.issuer}</p>
          <div class="cert-divider"></div>
          <div class="cert-validation">
            <span class="cert-label">ID:</span>
            <span class="cert-id">{cert.validationNumber}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .certifications-section {
    background: var(--color-bg);
    border-top: var(--border-width-thick) solid var(--color-border);
    border-bottom: var(--border-width-thick) solid var(--color-border);
  }

  .section-header {
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    font-family: var(--font-sans);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-md);
  }

  .title-line {
    width: 150px;
    height: var(--border-width);
    background: var(--color-accent);
    margin-bottom: var(--spacing-md);
  }

  .section-subtitle {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
  }

  .certifications-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .cert-card {
    border: var(--border-width) solid var(--color-border);
    padding: var(--spacing-xl);
    background: var(--color-bg);
    transition: var(--transition);
    position: relative;
  }

  .cert-card:hover {
    transform: translate(4px, 4px);
    box-shadow: -4px -4px 0 var(--color-border);
  }

  .cert-badge {
    position: absolute;
    top: -15px;
    right: var(--spacing-lg);
    background: var(--color-accent);
    color: var(--color-bg-tertiary);
    font-family: var(--font-sans);
    font-size: 0.875rem;
    font-weight: 900;
    padding: 0.5rem 1rem;
    letter-spacing: 0.1em;
    border: var(--border-width) solid var(--color-border);
  }

  .cert-name {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-weight: 800;
    line-height: 1.3;
    letter-spacing: 0.02em;
    margin-bottom: var(--spacing-sm);
  }

  .cert-issuer {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
    font-weight: 500;
  }

  .cert-divider {
    width: 60px;
    height: 2px;
    background: var(--color-border);
    margin: var(--spacing-md) 0;
  }

  .cert-validation {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-family: var(--font-mono);
    font-size: 0.8125rem;
  }

  .cert-label {
    font-weight: 700;
    color: var(--color-text-secondary);
  }

  .cert-id {
    font-weight: 600;
    color: var(--color-text-muted);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .certifications-grid {
      grid-template-columns: 1fr;
    }

    .cert-card {
      padding: var(--spacing-lg);
    }

    .cert-badge {
      font-size: 0.75rem;
      padding: 0.375rem 0.75rem;
      right: var(--spacing-md);
    }

    .cert-name {
      font-size: 1rem;
    }
  }
</style>
